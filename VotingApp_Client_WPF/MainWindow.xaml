<Window x:Class="VotingApp_Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VotingApp" Height="450" Width="800" Background="#FFD27EB0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="319*"/>
            <RowDefinition Height="115*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <TextBlock Text="Voting App" FontSize="70" HorizontalAlignment="Center" Margin="0,10,0,10" Background="#19D8D4CB" FontFamily="Showcard Gothic" Grid.RowSpan="2"/>

        <!-- Auswahlmöglichkeiten -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,157,0,0">
            <Button x:Name="btnCreateSession" Content="Create new session" Width="200" Height="50" Margin="5" Click="btnCreateSession_Click" FontFamily="Showcard Gothic" Background="#6646CA33"/>
            <Button x:Name="btnJoinSession" Content="Join session" Width="200" Height="50" Margin="5" FontFamily="Showcard Gothic" Background="#66ED2929"/>
        </StackPanel>

        <!-- Place Frame for hosting pages -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" FontSize="50" Grid.RowSpan="2"/>
    </Grid>
</Window>
