<Window x:Class="VotingApp_Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VotingApp" Height="450" Width="800">
    <Grid>
        <!-- Header -->
        <TextBlock Text="Voting App" FontSize="24" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Auswahlmöglichkeiten -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button x:Name="btnCreateSession" Content="Neue Session erstellen" Width="200" Margin="5" Click="btnCreateSession_Click"/>
            <Button x:Name="btnJoinSession" Content="Session beitreten" Width="200" Margin="5"/>
        </StackPanel>

        <!-- Place Frame for hosting pages -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
