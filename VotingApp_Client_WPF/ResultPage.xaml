<Page x:Class="VotingApp_Client_WPF.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:VotingApp_Client_WPF"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Title="Survey Statistics">
    <Grid Background="LightGray" Height="455" Width="635">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="cmbQuestions" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,61,0,0" SelectedIndex="0">
            <!-- Fügen Sie hier die Einträge für die Fragen hinzu -->
        </ComboBox>

        <lvc:CartesianChart x:Name="lvcChart" Grid.Row="1" Margin="10,138,10,10"/>
    </Grid>
</Page>