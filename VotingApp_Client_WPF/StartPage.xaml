<Window x:Class="VotingApp_Client_WPF.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartPage" Height="450" Width="800">
    <Grid>
        <!-- Header -->
        <TextBlock Text="Voting App" FontSize="24" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Auswahlmöglichkeiten -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button Content="Neue Session erstellen" Width="200" Margin="5" Click="CreateSession_Click"/>
            <Button Content="Session beitreten" Width="200" Margin="5" Click="JoinSession_Click"/>
        </StackPanel>
    </Grid>
</Window>
